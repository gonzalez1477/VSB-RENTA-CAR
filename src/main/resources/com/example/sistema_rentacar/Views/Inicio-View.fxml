<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<AnchorPane minHeight="600" minWidth="800" style="-fx-background-color: #024A70;" stylesheets="@../css/estilosPaginaIPrincipal.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sistema_rentacar.Controllers.InicioController">

    <children>
        <!-- Contenedor principal centrado -->
        <StackPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <VBox alignment="CENTER" spacing="15" style="-fx-background-color: #024A70;">
                <padding>
                    <Insets bottom="20" left="30" right="30" top="20" />
                </padding>

                <!-- Header con Logo y Título -->
                <VBox alignment="CENTER" spacing="8">
                    <!-- Logo Container -->
                    <StackPane prefHeight="100" prefWidth="100">
                        <Circle fill="white" radius="60" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0, 0, 3);" />
                        <ImageView fx:id="logoImage" fitHeight="105" fitWidth="105" preserveRatio="true">
                            <image>
                                <Image url="@../images/logo/logo1.png" />
                            </image>
                        </ImageView>
                    </StackPane>

                    <!-- Título Principal -->
                    <Label style="-fx-text-fill: #ffffff; -fx-font-size: 14px; -fx-font-weight: bold; -fx-opacity: 0.95;" text="Tu Compañero de Viaje Perfecto" />
                </VBox>

                <!-- Tarjeta Principal de Contenido -->
                <HBox alignment="CENTER" maxWidth="1200" spacing="15">

                    <!-- Sección Izquierda - Información -->
                    <VBox alignment="TOP_LEFT" maxWidth="500" prefWidth="450" spacing="12" style="-fx-background-color: rgba(255,255,255,0.95);                                  -fx-background-radius: 15;                                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 5);">
                        <padding>
                            <Insets bottom="20" left="25" right="25" top="20" />
                        </padding>

                        <VBox spacing="5">
                            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Bienvenido a VSB" />
                            <Label style="-fx-font-size: 12px; -fx-text-fill: #667eea; -fx-font-weight: 600;" text="Sistema Integral de Alquiler de Vehículos" textFill="#21679c" wrapText="true" />
                        </VBox>

                        <VBox spacing="8">
                            <!-- Característica 1 -->
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <StackPane minHeight="30" minWidth="30">
                                    <Circle fill="#95afea" opacity="0.40" radius="15" />
                                    <Label style="-fx-text-fill: #667eea; -fx-font-size: 16px; -fx-font-weight: bold;" text="✓" />
                                </StackPane>
                                <Label style="-fx-font-size: 12px; -fx-text-fill: #020618;" text="Amplia flota de vehículos modernos" wrapText="true" />
                            </HBox>

                            <!-- Característica 2 -->
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <StackPane minHeight="30" minWidth="30">
                                    <Circle fill="#91a1ea" opacity="0.40" radius="15" />
                                    <Label style="-fx-text-fill: #667eea; -fx-font-size: 16px; -fx-font-weight: bold;" text="✓" />
                                </StackPane>
                                <Label style="-fx-font-size: 12px; -fx-text-fill: #020618;" text="Reservas rápidas y seguras" wrapText="true" />
                            </HBox>

                            <!-- Característica 3 -->
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <StackPane minHeight="30" minWidth="30">
                                    <Circle fill="#667eea" opacity="0.40" radius="15" />
                                    <Label style="-fx-text-fill: #667eea; -fx-font-size: 16px; -fx-font-weight: bold;" text="✓" />
                                </StackPane>
                                <Label style="-fx-font-size: 12px; -fx-text-fill: #020618;" text="Atención personalizada 24/7" wrapText="true" />
                            </HBox>
                        </VBox>

                    </VBox>

                    <!-- Sección Derecha - Opciones de Acceso -->
                    <VBox alignment="CENTER" maxWidth="500" prefWidth="450" spacing="15" style="-fx-background-color: rgba(255,255,255,0.95);                                  -fx-background-radius: 15;                                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 5);">
                        <padding>
                            <Insets bottom="20" left="25" right="25" top="20" />
                        </padding>

                        <VBox alignment="CENTER" spacing="3">
                            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Seleccione su Acceso" />
                            <Label style="-fx-font-size: 11px; -fx-text-fill: #95a5a6;" text="Escoja la opción según su perfil" textFill="#21679c" />
                        </VBox>

                        <!-- Tarjeta Empleado -->
                        <VBox alignment="CENTER" spacing="8" style="-fx-background-color: #6B7280;                                      -fx-background-radius: 12;                                      -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.35), 10, 0, 0, 3);">
                            <padding>
                                <Insets bottom="15" left="18" right="18" top="15" />
                            </padding>

                            <HBox alignment="CENTER" spacing="10">
                                <StackPane prefHeight="38" prefWidth="38" style="-fx-background-color: white;                                             -fx-background-radius: 8;                                             -fx-padding: 3;">
                                    <ImageView fitHeight="34" fitWidth="34" preserveRatio="true">
                                        <image>
                                            <Image url="@../images/empleado.gif" />
                                        </image>
                                    </ImageView>
                                </StackPane>
                                <VBox alignment="CENTER_LEFT" spacing="1">
                                    <Label style="-fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold;" text="ÁREA DE EMPLEADOS" />
                                    <Label style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 9px;" text="Gestión y administración del sistema" wrapText="true" />
                                </VBox>
                            </HBox>

                            <Button fx:id="btnEmpleado" maxWidth="Infinity" onAction="#onEmpleadoClick" prefHeight="35" style="-fx-background-color: white;                                            -fx-text-fill: #667eea;                                            -fx-font-size: 12px;                                            -fx-font-weight: bold;                                            -fx-background-radius: 8;                                            -fx-cursor: hand;" styleClass="btn-empleado" text="ACCESO EMPLEADO" />
                        </VBox>

                        <!-- Tarjeta Cliente -->
                        <VBox alignment="CENTER" spacing="8" style="-fx-background-color: #11998e;                                      -fx-background-radius: 12;                                      -fx-effect: dropshadow(gaussian, rgba(17,153,142,0.35), 10, 0, 0, 3);">
                            <padding>
                                <Insets bottom="15" left="18" right="18" top="15" />
                            </padding>

                            <HBox alignment="CENTER" spacing="10">
                                <StackPane prefHeight="38" prefWidth="38" style="-fx-background-color: white;                                                 -fx-background-radius: 8;                                                  -fx-padding: 3;">
                                    <ImageView fitHeight="34" fitWidth="34" preserveRatio="true">
                                        <image>
                                            <Image url="@../images/cliente.gif" />
                                        </image>
                                    </ImageView>
                                </StackPane>
                                <VBox alignment="CENTER_LEFT" spacing="1">
                                    <Label style="-fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold;" text="PORTAL DE CLIENTES" />
                                    <Label style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 9px;" text="Reserva y gestiona tus alquileres" wrapText="true" />
                                </VBox>
                            </HBox>

                            <Button fx:id="btnCliente" maxWidth="Infinity" onAction="#onClienteClick" prefHeight="35" style="-fx-background-color: white;                                            -fx-text-fill: #11998e;                                            -fx-font-size: 12px;                                            -fx-font-weight: bold;                                            -fx-background-radius: 8;                                            -fx-cursor: hand;" styleClass="btn-cliente" text="ACCESO CLIENTE" />
                        </VBox>

                    </VBox>

                </HBox>

            </VBox>
        </StackPane>
    </children>

</AnchorPane>